{
    "manifest_version": 3,
    "name": "EventSyncLocal",
    "version": "1.0",
    "description": "Simplify your calendar event creation",
    "icons": {
        "16": "EventSyncMainLogo.png",
        "32": "EventSyncMainLogo.png",
        "48": "EventSyncMainLogo.png",
        "128": "EventSyncMainLogo.png"
    },
    "action": {
      "default_popup": "index.html",
      "default_title": "EventSync"
    },
    "permissions": [
      "identity",
      "background",
      "activeTab"
    ],
    "oauth2": {
      "client_id": "YOUR_GOOGLE_CLIENT_ID",
      "scopes": [
        "https://www.googleapis.com/auth/calendar",
        "https://www.googleapis.com/auth/userinfo.email",
        "https://www.googleapis.com/auth/userinfo.profile"
      ]
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["src/app.js"]
      }
    ],
    "background": {
      "service_worker": "src/service-workers/background.js"
    }
  }